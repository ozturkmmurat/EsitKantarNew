    <div class="container">
        <h5>@Localizer["Bolgelerimiz"]</h5>
        <div class="row row-30">
            <div class="col-md-6 col-xl-3">
                <ul class="list-marked list-marked-small">
                    <li>
                        Esit İstanbul Merkez ve Fabrika 1
                    </li>
                    <li>Esit Hendek Fabrika 2</li>
                    <li>Esit Ankara Bölge</li>
                    <li>Esit İzmir Bölge</li>
                    <li>
                        Esit Adana Bölge
                    </li>
                    <li>
